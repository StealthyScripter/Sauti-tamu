{
  "name": "phone-app-backend",
  "version": "1.0.0",
  "description": "Phone calling app backend API",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/app.js",
    "start": "node src/app.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --watchAll --detectOpenHandles",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --ci --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:auth": "jest tests/auth.test.js",
    "test:calls": "jest tests/calls.test.js",
    "test:contacts": "jest tests/contacts.test.js",
    "test:integration": "jest tests/integration/",
    "test:unit": "jest tests/unit/",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "pretest": "npm run test:setup",
    "test:setup": "node scripts/test-setup.js",
    "test:teardown": "node scripts/test-teardown.js",
    "migrate": "node scripts/migrate.js",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "agora-access-token": "^2.0.4",
    "bcryptjs": "2.4.3",
    "clickhouse": "2.6.0",
    "cors": "2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "6.8.1",
    "express-validator": "7.0.1",
    "firebase-admin": "^13.4.0",
    "helmet": "7.0.0",
    "jsonwebtoken": "9.0.1",
    "mongodb": "^5.9.2",
    "mongoose": "^7.8.7",
    "morgan": "1.10.0",
    "path-to-regexp": "^6.3.0",
    "pg": "8.11.1",
    "redis": "4.6.7",
    "winston": "3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "dotenv": "^16.5.0",
    "eslint": "8.45.0",
    "jest": "^29.7.0",
    "nodemon": "3.0.1",
    "prettier": "3.0.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "preset": "default",
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "globals": {
      "import.meta": {}
    },
    "transform": {},
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/migrations/**",
      "!src/clickhouse/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true
  }
}
